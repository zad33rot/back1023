generator client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  email     String    @unique
  password  String    
  createAt  DateTime  @default(now())
  posts     Post[]
}

model Post {
  id         Int      @id @default(autoincrement())
  title     String    
  content   String?
  authorId  Int
  author    User @relation(fields: [authorId], references: [id])
}